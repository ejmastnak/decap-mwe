---
import BaseLayout from "@/layouts/BaseLayout.astro";
import data from "../content/foo.json";

const title = "Foo"
const description = "The Foo page"
---

<BaseLayout title={title} description={description}>
  <h1>{data.heading}</h1>
  <img src={data.image} alt="Foo" width="400" />
  <p>{data.body}</p>
  <a href="/">{data.link_text}</a>
</BaseLayout>
